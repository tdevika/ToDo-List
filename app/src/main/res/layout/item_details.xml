<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="taskdetail"
            type="com.devika.todolist.ui.itemdetails.ItemDetailsViewModel" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/detailLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:cardMaxElevation="1dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="6dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkBox"
                            android:layout_width="37dp"
                            android:layout_height="37dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="16dp"
                            android:button="@drawable/selecter"
                            android:checked="@{taskdetail.task.completed}"
                            />

                        <TextView
                            android:id="@+id/taskTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:imeOptions="flagNoExtractUi"
                            android:maxLines="1"
                            android:text="@{taskdetail.task.title}"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textSize="23dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/desciption"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="16dp"
                        android:background="@null"
                        android:gravity="top"
                        android:imeOptions="flagNoExtractUi"
                        android:text="@{taskdetail.task.description}"
                        android:textSize="22dp"
                        android:textStyle="italic"

                        />
                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/itemDtailsFloatBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:padding="10dp"
            android:src="@drawable/edit_fab"
            app:fabSize="normal"
            app:layout_anchor="@id/detailLayout"
            app:layout_anchorGravity="bottom|right|end" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
